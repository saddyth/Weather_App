<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/bgPink"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:isScrollContainer="true"
            android:orientation="vertical"
            android:scrollbarStyle="insideOverlay"
            android:scrollbars="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="259dp"
                app:srcCompat="@drawable/coke_logo"
                tools:srcCompat="@drawable/coke_logo" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="259dp"
                app:srcCompat="@drawable/coke_logo"
                tools:srcCompat="@drawable/coke_logo" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_padding"
                android:text="@string/main_description"
                android:textColor="@color/textColor"
                android:textSize="@dimen/default_textSize" />

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="match_parent"
                android:layout_margin="@dimen/default_padding"
                android:layout_height="160dp"
                android:textColor="@color/textColor"
                android:textSize="@dimen/default_textSize"
                android:text="@string/check_rules" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/startButton"
                    android:layout_width="190dp"
                    android:layout_margin="@dimen/default_padding"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/default_textSize"
                    android:backgroundTint="@color/bg_buttons_color"
                    android:text="@string/button_label_ready"
                    android:textColor="@color/text_buttons_color" />

                <Button
                    android:id="@+id/endButton"
                    android:layout_width="144dp"
                    android:textSize="@dimen/default_textSize"
                    android:layout_margin="@dimen/default_padding"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/bg_buttons_color"
                    android:textColor="@color/text_buttons_color"
                    android:text="@string/button_label_first" />

            </LinearLayout>


            <ImageView
                android:id="@+id/icon"
                android:layout_width="290dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="@color/bg_buttons_color"
                app:srcCompat="@drawable/baseline_announcement_24" />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>